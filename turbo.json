{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["INTERNAL_ENV", "NEXT_RUNTIME"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["db:generate", "^build"],
      "inputs": [
        "src/**",
        "manifest.json",
        "next.config.js",
        "tsconfig.json",
        "tsup.config.ts"
      ],
      "outputs": ["dist/**", ".next/**"]
    },
    "start": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "codegen": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["db:generate"],
      "cache": false,
      "persistent": true
    },
    "dev:codegen": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "generate": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    }
  }
}
